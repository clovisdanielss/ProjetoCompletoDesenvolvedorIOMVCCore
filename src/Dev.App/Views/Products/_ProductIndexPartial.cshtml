@model IEnumerable<ProductViewModel>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" alt="@item.Image" style="width: 70px; height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Value.ToString("C");
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td style="text-align:right;">
                    <a suppress-by-claim-name="Product" suppress-by-claim-value="Edit" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><spam class="fa fa-pencil"></spam></a>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><spam class="fa fa-search"></spam></a>
                    <a suppress-by-claim-name="Product" suppress-by-claim-value="Delete" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>