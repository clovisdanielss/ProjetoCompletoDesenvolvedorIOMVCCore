@model Dev.App.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Document)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a href="javascript:window.history.back();" class="btn btn-secondary">Voltar</a>
</div>

@if(Model.Address != null)
{
    <hr/>
    <h3>Endereço</h3>
    <partial name="_AddressIndexPartial" model="@Model.Address"></partial>
}

@if(Model.Products != null){
    <hr/>
    <h3>Produtos</h3>
        <partial name="../Products/_ProductIndexPartial" model="@Model.Products"></partial>
}